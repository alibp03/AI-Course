TELEGRAM_ADMIN_IDS=12345678,87654321

# --- AI Hyper-Analysis (OpenAI / Claude) ---
AI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
